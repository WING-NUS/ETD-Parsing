  <locale xml:lang="en-GB">
    <terms>
      <term name="editor" form="verb-short">ed.</term>
      <term name="translator" form="verb-short">trans.</term>
    </terms>
  </locale>
  <macro name="originators">
    <names variable="author" prefix="&lt;author&gt;" suffix="&lt;/author&gt;">
      <name name-as-sort-order="all" delimiter="; "/>
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor" prefix="&lt;editor&gt;" suffix="&lt;/editor&gt;"/>
        <names variable="translator" prefix="&lt;translator&gt;" suffix="&lt;/translator&gt;"/>
      </substitute>
    </names>
  </macro>
  <macro name="sortnames">
    <names variable="author" prefix="&lt;author&gt;" suffix="&lt;/author&gt;">
      <name form="short" name-as-sort-order="all"/>
      <substitute>
        <names variable="editor" prefix="&lt;editor&gt;" suffix="&lt;/editor&gt;"/>
        <names variable="translator" prefix="&lt;translator&gt;" suffix="&lt;/translator&gt;"/>
      </substitute>
    </names>
  </macro>
  <macro name="year">
    <date variable="issued">
      <date-part name="year" prefix="&lt;year&gt;" suffix="&lt;/year&gt;"/>
    </date>
  </macro>
  <macro name="title">
    <choose>
      <if type="book">
        <text variable="title" text-case="title" font-style="italic" suffix=". &lt;/title&gt;" prefix="&lt;title&gt;"/>
      </if>
      <else-if type="chapter paper-conference" match="any">
        <text variable="title" text-case="title" suffix=". &lt;/title&gt;" quotes="true" prefix="&lt;title&gt;"/>
      </else-if>
      <else>
        <text variable="title" text-case="title" suffix=", &lt;/title&gt;" quotes="true" prefix="&lt;title&gt;"/>
      </else>
    </choose>
  </macro>
  <macro name="container">
    <choose>
      <if type="chapter paper-conference" match="any">
        <text term="in" text-case="capitalize-first" suffix=" "/>
        <group delimiter=", " suffix=". ">
          <text variable="container-title" font-style="italic" prefix="&lt;container-title&gt;" suffix="&lt;/container-title&gt;"/>
          <names variable="container-author editor" prefix="&lt;container-author editor&gt;" suffix="&lt;/container-author editor&gt;">
            <label form="verb-short" suffix=" "/>
            <name/>
          </names>
        </group>
      </if>
      <else-if type="article-journal">
        <group delimiter=" ">
          <text variable="container-title" font-style="italic" text-case="title" prefix="&lt;container-title&gt;" suffix="&lt;/container-title&gt;"/>
          <group delimiter=". ">
            <text variable="volume" font-style="italic" prefix="&lt;volume&gt;" suffix="&lt;/volume&gt;"/>
            <text variable="page" prefix="&lt;page&gt;" suffix="&lt;/page&gt;"/>
          </group>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="extras">
    <group delimiter=". ">
      <choose>
        <if type="book">
          <names variable="editor translator" prefix="&lt;editor translator&gt;" suffix="&lt;/editor translator&gt;">
            <label form="verb-short" suffix=" "/>
            <name/>
          </names>
        </if>
      </choose>
      <choose>
        <if is-numeric="edition">
          <group delimiter=" " prefix="&lt;edition&gt;" suffix="&lt;/edition&gt;">
            <number variable="edition" form="ordinal"/>
            <text term="edition" form="short"/>
          </group>
        </if>
      </choose>
      <group delimiter=" ">
        <text variable="collection-title" prefix="&lt;collection-title&gt;" suffix="&lt;/collection-title&gt;"/>
        <text variable="collection-number" prefix="&lt;collection-number&gt;" suffix="&lt;/collection-number&gt;"/>
      </group>
      <group delimiter=": ">
        <text variable="publisher-place" prefix="&lt;publisher-place&gt;" suffix="&lt;/publisher-place&gt;"/>
        <text variable="publisher" prefix="&lt;publisher&gt;" suffix="&lt;/publisher&gt;"/>
      </group>
    </group>
  </macro>
  <citation et-al-min="4" et-al-use-first="1" disambiguate-add-year-suffix="true" disambiguate-add-names="true" disambiguate-add-givenname="true">
    <layout suffix="." delimiter="; ">
      <group delimiter=", ">
        <group delimiter=" ">
          <names variable="author" prefix="&lt;author&gt;" suffix="&lt;/author&gt;">
            <name form="short"/>
            <substitute>
              <names variable="editor" prefix="&lt;editor&gt;" suffix="&lt;/editor&gt;"/>
              <names variable="translator" prefix="&lt;translator&gt;" suffix="&lt;/translator&gt;"/>
            </substitute>
          </names>
          <text macro="year"/>
        </group>
        <text variable="locator" prefix="&lt;locator&gt;" suffix="&lt;/locator&gt;"/>
      </group>
    </layout>
  </citation>
  <bibliography hanging-indent="true" et-al-min="6" et-al-use-first="3" entry-spacing="0">
    <sort>
      <key macro="sortnames"/>
      <key variable="issued"/>
    </sort>
    <layout suffix=".">
      <text macro="originators" suffix=" "/>
      <text macro="year" suffix=". "/>
      <text macro="title"/>
      <text macro="container"/>
      <text macro="extras"/>
    </layout>
  </bibliography>
</style>